<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../helpproject.xsl" ?>
<topic template="Default" lasteditedby="robert" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../helpproject.xsd">
  <title translate="true">/langversion</title>
  <keywords>
    <keyword translate="true">/langversion</keyword>
  </keywords>
  <body>
    <header>
      <para styleclass="Heading1"><text styleclass="Heading1" translate="true">/langversion</text></para>
    </header>
    <para styleclass="Normal"><text styleclass="Normal" translate="true">Causes the compiler to accept only syntax that is included in the chosen C# language specification.</text></para>
    <para styleclass="Heading2"><text styleclass="Heading2" translate="true">Syntax</text></para>
    <para styleclass="Normal"></para>
    <para styleclass="Normal"></para>
    <para styleclass="Code with box"><text styleclass="Code with box" translate="true">/langversion:option &#160;</text></para>
    <para styleclass="Normal"></para>
    <para styleclass="Heading2"><text styleclass="Heading2" translate="true">Arguments</text></para>
    <para styleclass="Normal"></para>
    <para styleclass="List"><text styleclass="List" translate="true">option</text><tab /><text styleclass="Normal" translate="true">The following values are valid:</text></para>
    <para styleclass="Normal"></para>
    <para styleclass="Normal"><table styleclass="Default" rowcount="5" colcount="2">
      <tr style="vertical-align:top">
        <td style="width:246px;">
          <para styleclass="Normal"><text styleclass="Normal" translate="true">Option</text></para>
        </td>
        <td style="width:870px;">
          <para styleclass="Normal"><text styleclass="Normal" translate="true">Meaning</text></para>
        </td>
      </tr>
      <tr style="vertical-align:top">
        <td style="width:246px;">
          <para styleclass="Normal"><text styleclass="Normal" translate="true">default</text></para>
        </td>
        <td style="width:870px;">
          <para styleclass="Normal"><text styleclass="Normal" translate="true">The compiler accepts all valid language syntax.</text></para>
        </td>
      </tr>
      <tr style="vertical-align:top">
        <td style="width:246px;">
          <para styleclass="Normal"><text styleclass="Normal" translate="true">ISO-1</text></para>
        </td>
        <td style="width:870px;">
          <para styleclass="Normal"><text styleclass="Normal" translate="true">The compiler accepts only syntax that is included in the ISO/IEC 23270:2003 C# language specification.</text></para>
        </td>
      </tr>
      <tr style="vertical-align:top">
        <td style="width:246px;">
          <para styleclass="Normal"><text styleclass="Normal" translate="true">ISO-2</text></para>
        </td>
        <td style="width:870px;">
          <para styleclass="Normal"><text styleclass="Normal" translate="true">The compiler accepts only syntax that is included in the ISO/IEC 23270:2006 C# language specification. This specification is available on the ISO Web site.</text></para>
        </td>
      </tr>
      <tr style="vertical-align:top">
        <td style="width:246px;">
          <para styleclass="Normal"><text styleclass="Normal" translate="true">3</text></para>
        </td>
        <td style="width:870px;">
          <para styleclass="Normal"><text styleclass="Normal" translate="true">The compiler accepts only syntax that is included in the version 3.0 C# Language Specification.</text></para>
        </td>
      </tr>
    </table></para>
    <para styleclass="Normal"></para>
  </body>
</topic>
